<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7A147A"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/roundContainer"
        android:layout_width="392dp"
        android:layout_height="208dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundcontainer2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/accountHolderName"
        android:layout_width="176dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:text="@string/accountHolder"
        android:textColor="#7A147A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/roundContainer"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@id/roundContainer"
        app:layout_constraintTop_toTopOf="@id/roundContainer" />

    <!-- IBAN -->

    <TextView
        android:id="@+id/accountNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/accountNum"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/roundContainer"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="@id/roundContainer"
        app:layout_constraintTop_toBottomOf="@id/accountHolderName" />

    <!-- SHOW BALANCE -->
    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/IBAN"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/roundContainer"
        app:layout_constraintStart_toStartOf="@id/roundContainer"
        app:layout_constraintTop_toBottomOf="@id/accountNumber" />

    <Button
        android:id="@+id/showBalance"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:backgroundTint="#F2F2F2"
        android:text="@string/VIEW_balance"
        android:textColor="#4CAF50"
        android:textSize="17sp"
        android:textStyle="bold"
        app:icon="@drawable/balance"
        app:iconGravity="start"
        app:iconPadding="6dp"
        app:iconTint="#4CAF50"
        app:layout_constraintEnd_toEndOf="@id/roundContainer"
        app:layout_constraintStart_toStartOf="@id/roundContainer"
        app:layout_constraintTop_toBottomOf="@id/textView16" />


    <Button
        android:id="@+id/shareButton"
        android:layout_width="158dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:drawableStart="@drawable/share"
        android:drawableTint="#FFFFFF"
        android:text="@string/share"
        android:textAllCaps="false"
        android:textSize="13sp"
        app:icon="@drawable/share"
        app:layout_constraintBottom_toBottomOf="@+id/roundContainer"
        app:layout_constraintStart_toStartOf="@+id/roundContainer"
        app:layout_constraintTop_toTopOf="@+id/roundContainer"
        app:layout_constraintVertical_bias="0.913" />

    <Button
        android:id="@+id/transactionsButton"
        android:layout_width="158dp"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        android:drawableStart="@drawable/transactions"
        android:text="@string/transactions"
        android:textAllCaps="false"
        android:textSize="13sp"
        app:icon="@drawable/transactions"
        app:iconGravity="textStart"
        app:iconSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/roundContainer"
        app:layout_constraintEnd_toEndOf="@+id/roundContainer"
        app:layout_constraintTop_toTopOf="@+id/roundContainer"
        app:layout_constraintVertical_bias="0.913" />


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="426dp"
        android:layout_height="849dp"
        android:layout_marginTop="20dp"
        android:background="#F1F1F1"
        android:src="@drawable/roundcontainer2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roundContainer" />

    <!-- ROW 1 -->


    <!-- ROW 2 -->
    <Button
        android:id="@+id/sendMoney"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/sendMoneyButton"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:icon="@drawable/sendmoney"
        app:iconSize="24dp"
        app:iconTint="#4CAF50"
        app:layout_constraintEnd_toStartOf="@+id/mobileTopup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roundContainer" />

    <Button
        android:id="@+id/mobileTopup"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/mobile_topup"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:icon="@drawable/mobileicon"
        app:iconGravity="start"
        app:iconPadding="8dp"
        app:iconSize="32dp"
        app:iconTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sendMoney"
        app:layout_constraintTop_toBottomOf="@+id/roundContainer" />

    <Button
        android:id="@+id/raastPayment"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/raast_payment"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:icon="@drawable/raast"
        app:iconTint="@null"
        app:iconSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/sendMoney"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/billPayments" />


    <!-- ROW 3 -->
    <Button
        android:id="@+id/billPayments"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/bill_payment"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:icon="@drawable/baseline_addchart_24"
        app:iconSize="24dp"
        app:iconTint="#7A147A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/raastPayment"
        app:layout_constraintTop_toBottomOf="@id/mobileTopup" />

    <Button
        android:id="@+id/cardManage"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/card_management"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:icon="@drawable/baseline_addchart_24"
        app:iconTint="#7A147A"
        app:iconSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/raastPayment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/qrPay" />


    <!-- ROW 4 -->
    <Button
        android:id="@+id/qrPay"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#FFFFFF"
        android:text="QR Payments"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:icon="@drawable/baseline_addchart_24"
        app:iconSize="24dp"
        app:iconTint="#7A147A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardManage"
        app:layout_constraintTop_toBottomOf="@id/billPayments" />

    <Button
        android:id="@+id/zakat"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/zakat_sadqaat"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:icon="@drawable/baseline_addchart_24"
        app:iconTint="#7A147A"
        app:iconSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardManage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/meezanFunds" />


    <!-- ROW 5 -->

    <Button
        android:id="@+id/meezanFunds"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#FFFFFF"
        android:text="Al-Meezan Mutual Funds"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:icon="@drawable/baseline_addchart_24"
        app:iconSize="24dp"
        app:iconTint="#7A147A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/zakat"
        app:layout_constraintTop_toBottomOf="@id/qrPay" />

    <Button
        android:id="@+id/payoneer"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFFFFF"
        android:text="Payoneer"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:icon="@drawable/baseline_addchart_24"
        app:iconTint="#7A147A"
        app:iconSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/zakat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/feedback" />

    <Button
        android:id="@+id/feedback"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/feedback"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:icon="@drawable/baseline_addchart_24"
        app:iconSize="24dp"
        app:iconTint="#7A147A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/payoneer"
        app:layout_constraintTop_toBottomOf="@id/meezanFunds" />

</androidx.constraintlayout.widget.ConstraintLayout>
