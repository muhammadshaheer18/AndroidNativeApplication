<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7A147A"
    android:visibility="visible"
    tools:context=".ui.home.HomeFragment"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/roundContainer"
        android:layout_width="360dp"
        android:layout_height="249dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundcontainer2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/shareButton"
        android:layout_width="157dp"
        android:layout_height="53dp"
        android:layout_marginBottom="12dp"
        android:drawableStart="@drawable/share"
        android:drawablePadding="8dp"
        android:drawableTint="#FFFFFF"
        android:text="Share"
        android:textAllCaps="false"
        android:textSize="13sp"
        android:visibility="visible"
        app:icon="@drawable/share"
        app:layout_constraintBottom_toBottomOf="@+id/roundContainer"
        app:layout_constraintEnd_toStartOf="@+id/transactionsButton"
        app:layout_constraintHorizontal_bias="0.72"
        app:layout_constraintStart_toStartOf="@+id/roundContainer"
        tools:visibility="visible" />

    <Button
        android:id="@+id/transactionsButton"
        android:layout_width="157dp"
        android:layout_height="53dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:text="Transactions"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textSize="13sp"
        app:icon="@drawable/transactions"
        app:layout_constraintBottom_toBottomOf="@+id/roundContainer"
        app:layout_constraintEnd_toEndOf="@+id/roundContainer" />

    <Button
        android:id="@+id/showBalance"
        android:layout_width="309dp"
        android:layout_height="51dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="#F2F2F2"
        android:text="Show Balance"
        android:textColor="#4CAF50"
        android:textColorHighlight="#4CAF50"
        android:textColorLink="#4CAF50"
        android:textSize="17sp"
        android:textStyle="bold"
        app:icon="@drawable/balance"
        app:iconGravity="start"
        app:iconPadding="2dp"
        app:iconSize="30dp"
        app:iconTint="#4CAF50"
        app:layout_constraintEnd_toEndOf="@+id/roundContainer"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="@+id/roundContainer"
        app:layout_constraintTop_toTopOf="@+id/roundContainer" />

    <TextView
        android:id="@+id/accountHolderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="MUHAMMAD SHAHEER"
        android:textColor="#7A147A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/roundContainer"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="@+id/roundContainer"
        app:layout_constraintTop_toTopOf="@+id/roundContainer" />

    <TextView
        android:id="@+id/accountNumber"
        android:layout_width="301dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:text="Current Account: 91929442142184"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/roundContainer"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toStartOf="@+id/roundContainer"
        app:layout_constraintTop_toBottomOf="@+id/accountHolderName" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="305dp"
        android:layout_height="17dp"
        android:layout_marginTop="24dp"
        android:text="IBAN: PK51MEZN23776482917428172"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/roundContainer"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/roundContainer"
        app:layout_constraintTop_toTopOf="@+id/accountNumber" />


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="370dp"
        android:layout_height="598dp"
        android:layout_marginBottom="16dp"
        android:background="#F1F1F1"
        android:src="@drawable/roundcontainer2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="144dp"
        android:layout_height="74dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#FFFFFF"
        android:text="Send Money"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:icon="@drawable/sendmoney"
        app:iconTint="#4CAF50"
        app:layout_constraintEnd_toStartOf="@+id/button7"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/roundContainer" />

    <Button
        android:id="@+id/button7"
        android:layout_width="144dp"
        android:layout_height="74dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#FFFFFF"
        android:text="Mobile Topup"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9" />


</androidx.constraintlayout.widget.ConstraintLayout>