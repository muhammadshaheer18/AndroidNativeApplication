<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbg"
    tools:context=".ui.qrpay.QrpayFragment">

    <!-- Header Section -->
    <RelativeLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ContactPageHeadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/FAQ_header"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:gravity="center"/>

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ContactPageHeadingText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="@string/qandnas"
            android:textColor="#D5D5D5"
            android:textSize="14sp"/>
    </RelativeLayout>

    <!-- Background Card Container -->
    <LinearLayout
        android:id="@+id/containerCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/roundcontainer"
        android:backgroundTint="#FFFFFF"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerSection">

        <!-- Scrollable FAQ Container -->
        <ScrollView
            android:id="@+id/faqScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:scrollbars="none"
            android:fadeScrollbars="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <!-- Section Title with Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="20dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="#00A651"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frequently Asked Questions"
                        android:textColor="#1C1C1C"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.01"/>
                </LinearLayout>

                <!-- FAQ 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#F8F9FA">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:text="Q"
                                android:gravity="center"
                                android:background="@drawable/roundcontainer"
                                android:backgroundTint="#00A651"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="How do I register on Meezan Mobile App?"
                                android:textColor="#1C1C1C"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:lineSpacingExtra="2dp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="8dp"
                            android:text="Register using CNIC, mobile number and OTP. Your account activates instantly."
                            android:textColor="#5A5A5A"
                            android:textSize="14sp"
                            android:lineSpacingExtra="3dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- FAQ 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#F8F9FA">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:text="Q"
                                android:gravity="center"
                                android:background="@drawable/roundcontainer"
                                android:backgroundTint="#00A651"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="What services can I use inside the app?"
                                android:textColor="#1C1C1C"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:lineSpacingExtra="2dp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="8dp"
                            android:text="Fund transfers, QR payments, bill payments, cards management, statements &amp; more."
                            android:textColor="#5A5A5A"
                            android:textSize="14sp"
                            android:lineSpacingExtra="3dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- FAQ 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#F8F9FA">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:text="Q"
                                android:gravity="center"
                                android:background="@drawable/roundcontainer"
                                android:backgroundTint="#00A651"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Can I pay bills using Meezan Mobile App?"
                                android:textColor="#1C1C1C"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:lineSpacingExtra="2dp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="8dp"
                            android:text="Yes, you can pay electricity, gas, water, and internet bills instantly."
                            android:textColor="#5A5A5A"
                            android:textSize="14sp"
                            android:lineSpacingExtra="3dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- FAQ 4 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#F8F9FA">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:text="Q"
                                android:gravity="center"
                                android:background="@drawable/roundcontainer"
                                android:backgroundTint="#00A651"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="What is Meezan QR Pay?"
                                android:textColor="#1C1C1C"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:lineSpacingExtra="2dp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="8dp"
                            android:text="You can make payments by scanning QR codes securely without sharing card details."
                            android:textColor="#5A5A5A"
                            android:textSize="14sp"
                            android:lineSpacingExtra="3dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- FAQ 5 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#F8F9FA">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:text="Q"
                                android:gravity="center"
                                android:background="@drawable/roundcontainer"
                                android:backgroundTint="#00A651"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="How do I reset my password?"
                                android:textColor="#1C1C1C"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:lineSpacingExtra="2dp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="8dp"
                            android:text="Use 'Forgot Password', verify CNIC + OTP, and set a new login password."
                            android:textColor="#5A5A5A"
                            android:textSize="14sp"
                            android:lineSpacingExtra="3dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- FAQ 6 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#F8F9FA">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:text="Q"
                                android:gravity="center"
                                android:background="@drawable/roundcontainer"
                                android:backgroundTint="#00A651"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Can I enable biometric login?"
                                android:textColor="#1C1C1C"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:lineSpacingExtra="2dp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="8dp"
                            android:text="Yes, fingerprint and face login can be enabled for faster secure access."
                            android:textColor="#5A5A5A"
                            android:textSize="14sp"
                            android:lineSpacingExtra="3dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- FAQ 7 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#F8F9FA">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:text="Q"
                                android:gravity="center"
                                android:background="@drawable/roundcontainer"
                                android:backgroundTint="#00A651"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Can I block my debit card from the app?"
                                android:textColor="#1C1C1C"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:lineSpacingExtra="2dp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="8dp"
                            android:text="Yes, from Card Management you can instantly block or request a new card."
                            android:textColor="#5A5A5A"
                            android:textSize="14sp"
                            android:lineSpacingExtra="3dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>